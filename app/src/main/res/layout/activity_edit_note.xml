<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.l30605.fypjdisnote.EditNote">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:id="@+id/tvTitle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etTitle"
        android:layout_below="@+id/tvTitle"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:id="@+id/tvDescription"
        android:layout_below="@+id/etTitle"
        />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:lines="20"
        android:minLines="3"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:layout_below="@+id/tvDescription"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Font Size :"
        android:id="@+id/tvFontSize"
        android:layout_below="@+id/etDescription"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinFontSize"
        android:layout_below="@+id/tvFontSize"
        ></Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note Size :"
        android:id="@+id/tvNoteSize"
        android:layout_below="@+id/spinFontSize"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinNoteSize"
        android:layout_below="@+id/tvNoteSize"
        ></Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note Design :"
        android:id="@+id/tvNoteType"
        android:layout_below="@+id/spinNoteSize"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinNoteType"
        android:layout_below="@+id/tvNoteType"
        ></Spinner>

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="save"
        android:id="@+id/btnSave"
        android:background="@color/Greeny"
        android:textColor="@android:color/white"
        android:layout_below="@+id/spinNoteType"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark"
        android:layout_below="@+id/btnSave"/>


</RelativeLayout>
